<%- include('partials/header', { pageTitle: "Home" }) %>

<div class="sidebar">
  <h3 class="text-center mb-4">T4T Workflow</h3>
  <div class="input-group input-group-lg mb-4">
    <input type="text" id="searchInput" class="form-control" placeholder="Search control #" />
    <button class="btn btn-outline-light" onclick="searchControl()">
      Go
    </button>
  </div>
  <div class="d-grid gap-3">
    <button class="btn btn-primary btn-lg" onclick="showSection('approved')">
      Approved
    </button>
    <button class="btn btn-warning btn-lg text-dark" onclick="showSection('being_shopped')">
      Being Shopped
    </button>
    <button class="btn btn-info btn-lg" onclick="showSection('ready_for_pickup')">
      Ready for Pickup
    </button>
    <button class="btn btn-success btn-lg" onclick="showSection('complete')">
      Complete
    </button>
    <!-- Import CSV Button -->
    <div class="mt-4">
      <label class="btn btn-danger btn-lg w-100">
        Import CSV File
        <input type="file" id="csvImportFile" accept=".csv" style="display: none" onchange="handleFileSelect(event)" />
      </label>
    </div>
  </div>
</div>

<div class="main-content">
  <h1 class="text-center mb-5 text-primary display-4">
    Toys for Tots South Brevard
  </h1>
  <div id="section-approved" class="status-section">
    <h2 class="text-primary">Approved</h2>
    <div id="approved"></div>
  </div>
  <div id="section-being_shopped" class="status-section">
    <h2 class="text-warning">Being Shopped</h2>
    <div id="being_shopped"></div>
  </div>
  <div id="section-ready_for_pickup" class="status-section">
    <h2 class="text-info">Ready for Pickup</h2>
    <div id="ready_for_pickup"></div>
  </div>
  <div id="section-complete" class="status-section">
    <h2 class="text-success">Complete</h2>
    <div id="complete"></div>
  </div>
</div>

<%- include('partials/modals.html') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  window.families = <%- JSON.stringify(families) %>;
</script>
<!-- JS scripts at the end of the body for faster loading -->
<script src="/js/main.js"></script>
<script src="/js/modals.js"></script>